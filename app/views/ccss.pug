extends default

block links
	link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.10.0/fullcalendar.min.css', type='text/css')
	link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.10.0/fullcalendar.print.css', type='text/css' media='print')


block scripts
	script(src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js")
	script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js")
	script(src="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.10.0/fullcalendar.min.js")
	script.
		$(document).ready(function() {
			var calendarEvents = !{calendarEvents};
			$('#calendar').fullCalendar({
				header: {
					left: '',
					center: 'title',
					right: 'prev,next today'
				},
				navLinks: false, // can click day/week names to navigate views
				editable: true,
				eventLimit: true, // allow "more" link when too many events
				events: calendarEvents
			});
		});

block content
	h2 Teacher Cover
	div#calendar